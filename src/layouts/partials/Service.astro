---
import { Image } from "astro:assets";
const { services } = Astro.props;

type Service = {
  name: string;
  description: string;
  image: string;
};
---

{
  services.data.enable && (
    <section>
      <div class="container py-20">
        <h1 class="text-center pb-4">{services.data.title}</h1>
        <div class="grid w-full grid-cols-1 gap-6 mx-auto md:grid-cols-2 xl:grid-cols-3">
          {services.data.services.map((service: Service) => (
            <div class="group flex gap-3 flex-col justify-center items-center p-6 xl:justify-start xl:items-start cursor-pointer">
              <Image
                height={60}
                width={200}
                src={service.image}
                alt="blog"
                format="webp"
                class="transition-all group-hover:-translate-y-2 rounded"
              />
              <span class="transition-all text-2xl font-semibold text-black group-hover:text-orange-500 lg:text-3xl dark:text-gray-300 dark:group-hover:text-white">
                {service.name}
              </span>
              <p class="transition-all mx-auto text-xl leading-relaxed text-gray-500 text-center lg:text-base xl:text-start group-hover:text-orange-400 dark:group-hover:text-white ">
                {service.description}
              </p>{" "}
            </div>
          ))}
        </div>
      </div>
    </section>
  )
}
